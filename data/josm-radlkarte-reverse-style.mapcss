/** 
 * radlkarte uses three attributes:
 * p=0|1|2 (mandatory)
 * s=0|1|2 (mandatory)
 * oneway=yes (optional)
 */

/* p(riority / level in route hierarchy): 0=main, 1=regional, 2=local */
way[p=0] {
    opacity: 1;
    color: #FF6600;
}
way[p=1] {
    opacity: 1;
    color: #51A4B6;
}
way[p=2] {
    opacity: 1;
    color: #51A4B6;
}

/* s(tressfulness): 0=calm, 1=medium, 2=stressful */
way[s=0] {
    width: 6;
}
way[s=1] {
    width: 2;
}
way[s=2] {
    width: 2;
    dashes: 5,5;
}
